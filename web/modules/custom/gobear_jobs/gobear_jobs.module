use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function gobear_jobs_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the gobear_jobs module.
    case 'help.page.gobear_jobs':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Gobear Job Listing Page') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function gobear_jobs_theme($existing, $type, $theme, $path) {
  
  return [
    'gobear_job_listing' => [
      'render element' => 'form',
      'path' => drupal_get_path('module', 'gobear_jobs') . '/templates',
      'template' => 'job-listing',
      'variables' => ['jobs' => NULL]
    ],
  ];
}

/**
 * Helper function to convert time in Times ago format.
 */
function timeAgo($time_ago)
{
  $time_ago = strtotime($time_ago);
  $cur_time   = time();
  $time_elapsed   = $cur_time - $time_ago;
  $seconds    = $time_elapsed ;
  $minutes    = round($time_elapsed / 60 );
  $hours      = round($time_elapsed / 3600);
  $days       = round($time_elapsed / 86400 );
  $weeks      = round($time_elapsed / 604800);
  $months     = round($time_elapsed / 2600640 );
  $years      = round($time_elapsed / 31207680 );
  // Seconds
  if($seconds <= 60){
    return "just now";
  }
  //Minutes
  else if($minutes <=60){
    if($minutes==1){
      return "one minute ago";
    }
    else{
      return "$minutes minutes ago";
    }
  }
  //Hours
  else if($hours <=24){
    if($hours==1){
      return "an hour ago";
    }else{
      return "$hours hrs ago";
    }
  }
  //Days
  else if($days <= 7){
    if($days==1){
      return "yesterday";
    }else{
      return "$days days ago";
    }
  }
  //Weeks
  else if($weeks <= 4.3){
    if($weeks==1){
      return "a week ago";
    }else{
      return "$weeks weeks ago";
    }
  }
  //Months
  else if($months <=12){
    if($months==1){
      return "a month ago";
    }else{
      return "$months months ago";
    }
  }
  //Years
  else{
    if($years==1){
      return "one year ago";
    }else{
      return "$years years ago";
    }
  }
}
